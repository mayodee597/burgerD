<h1>Burgers App</h1>

<p>Manage burgers eaten with this app</p>

<!-- Pass in data from server.js -->
<h2>Available burgers</h2>
<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  	<li>
     <form action="/burgers/{{this.id}}?_method=put" method = "post">
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger_name:</span> {{this.burger_name}}</p>
      <p><span class="label">Devoured:</span> {{this.devoured}}</p>

      <button type="submit" data-id="{{this.id}}" class="delburgerName">Delete</button>
    </form>

  	</li>
     {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  	<li>
     <form action="/burgers/{{this.id}}?_method=put" method = "post">
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger_name:</span> {{this.burger_name}}</p>
      <p><span class="label">Devoured:</span> {{this.devoured}}</p>

    
    </form>

  	</li>
     {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form" action="/burgers" method="post">

  <div class="form-group">
    <label for="auth">Burger:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>

